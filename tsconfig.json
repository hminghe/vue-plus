{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "target": "ES2015",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"]
  },
   "include": [
    "**/**/*.ts",
    "**/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/**/*.md",
    "**/dist"
  ]
}
