{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["packages/docs/*"],
      "@vue-plus/element-plus": ["packages/element-plus/src/index.ts"],
      "@vue-plus/element-plus/es/*": ["packages/element-plus/src/*"]
    }
  },
  "include": [
    "**/**/*.ts",
    "**/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "**/dist"
  ]
}